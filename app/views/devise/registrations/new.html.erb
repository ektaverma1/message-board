  <div class="row new_post_header">
        <h2 class="col-md-12">Register</h2>
    </div>
<div class="row registration_wrapper">
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'col-md-12 form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group row">
    <%= f.label :name, class: "offset-md-2 col-md-2 col-form-label form-label" %>
    <%= f.text_field :name, required: true, class: "col-md-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :email, class: "offset-md-2 col-md-2 col-form-label form-label" %>
    <%= f.email_field :email, required: true, class: "col-md-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :password, class: "offset-md-2 col-md-2 col-form-label form-label" %>
    <%= f.password_field :password, required: true , autocomplete: "off", class: "form-control col-md-6" %>
</div>

<div class="form-group row">
    <%= f.label :password_confirmation, class: "offset-md-2 col-md-2 col-form-label form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "col-md-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :avatar, class: 'offset-md-2 col-md-2 col-form-label form-label' %>
    <%= f.file_field :avatar, required: true, class: "col-md-6 form-control" %>
</div>

<div class="form-group row">
    <div class="offset-md-2 col-md-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>

<div class="form-group row">
    <div class="offset-md-2 col-md-6">
        <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>
</div>
