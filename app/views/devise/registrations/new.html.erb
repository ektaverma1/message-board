<div class="registration_wrapper">
<h2>Register</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group row">
    <%= f.label :name, class: "col-sm-4 control-label" %>
    <%= f.text_field :name, required: true, class: "col-sm-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :email, class: "col-sm-4 control-label" %>
    <%= f.email_field :email, required: true, class: "col-sm-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <%= f.password_field :password, required: true , autocomplete: "off", class: "form-control col-sm-6" %>
</div>

<div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "col-sm-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :avatar, class: 'col-sm-4 control-label'  %>
    <%= f.file_field :avatar, required: true, class: "col-sm-6" %>
</div>

<div class="form-group row">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-offset-2 col-sm-6">
        <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>
</div>
