 <div class="row new_post_header">
        <h2 class="col-md-12">Sign in</h2>
    </div>
<div class="row login_wrapper">
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'col-md-12 form-horizontal'}) do |f| %>
<div class="row form-group">
        <%= f.label :email, class: "offset-md-2 col-md-2 col-form-label form-label" %>
        <div class="col-md-6">
            <%= f.email_field :email, required: true , autofocus: true , class: "form-control" %>
        </div>
</div>

<div class="row form-group">
    <%= f.label :password, class: "offset-md-2 col-md-2 col-form-label form-label" %>
    <div class="col-md-6">
        <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<% if devise_mapping.rememberable? -%>
<div class="row form-group">
    <div class="offset-md-2 col-md-10 col-md-offset-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me , class: "form-label"%>
    </div>
</div>
<% end -%>

<div class="form-group row">
    <div class="offset-md-2 col-md-6 col-md-offset-2">
        <%= f.submit "Sign in", class: 'btn btn-primary' %>
    </div>
</div>

<div class="form-group row">
    <div class="offset-md-2 col-md-6 col-md-offset-2">
        <%= render "devise/shared/links" %>
    </div>
</div>

<% end %>
</div>