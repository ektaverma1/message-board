<div class="login_wrapper">
<h2>Sign in</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<div class="form-group row">
    <%= f.label :email, class: "col-sm-4 control-label" %>
    <%= f.email_field :email, autofocus: true , class: "col-sm-6 form-control" %>
</div>

<div class="form-group row">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <%= f.password_field :password, autocomplete: "off", class: "col-sm-6 form-control" %>
</div>

<% if devise_mapping.rememberable? -%>
<div class="form-group row">
    <div class="col-sm-6 col-sm-offset-2">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
</div>
<% end -%>

<div class="form-group row">
    <div class="col-sm-6 col-sm-offset-2">
        <%= f.submit "Sign in", class: 'btn btn-primary' %>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-6 col-sm-offset-2">
        <%= render "devise/shared/links" %>
    </div>
</div>

<% end %>
</div>