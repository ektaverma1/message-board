<div class="comment comments-border">
	<div class="comment_content">
		<p class="comment_body"><%= comment.content.html_safe %></p>
		<h6 class="comment_user"><%= "Reply By #{comment.user.name}" %></h6>
		<p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
	</div>	

  	<%= render :partial => 'comments/votes',:locals => {:comment => comment} %>
  	<br>

	<% if user_signed_in? && current_user == comment.user %>
		<br>
		<p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure?'} %></p>
	<% end %>
</div>